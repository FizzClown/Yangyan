    <com.xxp.yangyan.pro.view.CircleProgressbar
        android:id="@+id/cpbSplash"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:color_done="@color/colorPrimary"
        app:color_undone="#50ffffff"
        app:ring_width="5" />

</RelativeLayout>
